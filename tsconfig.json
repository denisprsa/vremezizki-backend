{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES2017",
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom"
        ],
        "allowJs": true,
        "checkJs": false,
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "noImplicitAny": false,
        "alwaysStrict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}